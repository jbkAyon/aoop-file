<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.go.HangmanController" stylesheets="@styles.css" styleClass="hangman-container">
    <children>
        <VBox spacing="12.0" alignment="TOP_CENTER" prefWidth="800.0" prefHeight="650.0" styleClass="hangman-panel">
            <children>
                <Label text="Hangman Game" styleClass="hangman-title">
                </Label>
                <ImageView fx:id="img" fitHeight="280.0" fitWidth="360.0" preserveRatio="true" styleClass="hangman-image"/>
                <HBox spacing="8.0" alignment="CENTER">
                    <children>
                        <TextField fx:id="tf1" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf2" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf3" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf4" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf5" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf6" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf7" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                        <TextField fx:id="tf8" prefWidth="40.0" maxWidth="40.0" styleClass="letter-box"/>
                    </children>
                </HBox>
                <HBox spacing="12.0" alignment="CENTER">
                    <children>
                        <Label text="Hint:" styleClass="game-info"/>
                        <Label fx:id="hint" styleClass="hint-label"/>
                        <Label text="| Letters:" styleClass="game-info"/>
                        <Label fx:id="letter_count" styleClass="game-info"/>
                    </children>
                </HBox>
                <HBox spacing="8.0" alignment="CENTER">
                    <children>
                        <TextField fx:id="input" promptText="Type a letter" prefWidth="120.0" onAction="#checkInput" styleClass="input-field"/>
                        <Button text="Check" onAction="#checkInput" styleClass="game-action-button"/>
                        <Button text="Back" onAction="#backToMenu" styleClass="back-button"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>


